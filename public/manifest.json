{
  "manifest_version": 3,
  "name": "LinClip",
  "description": "テキストベースでのWebページ共有をサポート",
  "permissions": ["tabs", "clipboardWrite"],
  "version": "{{version}}",
  "action": {
    "default_popup": "index.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"]
    }
  ]
}
